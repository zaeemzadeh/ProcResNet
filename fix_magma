files=(	"testing/testing_zlange.cpp"
	"testing/testing_zlanhe.cpp"
	"testing/testing_znan_inf.cpp"
	"testing/testing_zheevdx_2stage.cpp"
	"testing/testing_ztrsv_batched.cpp"
	"testing/testing_zgesv_batched.cpp"
	"testing/testing_zgesv_nopiv_batched.cpp"
	"testing/testing_zgetrf_batched.cpp"
	"testing/testing_zgetrf_nopiv_batched.cpp"
	"testing/testing_zgetri_batched.cpp"
